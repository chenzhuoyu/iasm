  <explanations scope="all"></explanations>
  <ps_section howmany="1">
    <ps name="aarch64/instrs/integer/flags/axflag/AXFLAG_M_pstate" mylink="execute" enclabels="" sections="1" secttype="Operation">
      <pstext mayhavelinks="1" section="Execute" rep_section="execute">bit z = PSTATE.Z OR PSTATE.V;
bit c = PSTATE.C AND NOT(PSTATE.V);

PSTATE.N = '0';
PSTATE.Z = z;
PSTATE.C = c;
PSTATE.V = '0';</pstext>
    </ps>
